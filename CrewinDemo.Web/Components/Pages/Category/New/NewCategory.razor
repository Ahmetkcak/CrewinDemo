@page "/category/new"

<h3 class="text-center mt-4">New Category</h3>

<div class="container mt-4">
    <EditForm Model="@newCategory" OnValidSubmit="CreateNewCategoryy" FormName="categoryForm">
        <DataAnnotationsValidator />
        <div class="mb-3 form-group">
            <label for="Slug" class="form-label">Slug</label>
            <InputText id="Slug" class="form-control" @bind-Value="newCategory.Slug" />
        </div>

        <div class="mb-3 form-group">
            <label for="Name" class="form-label">Name</label>
            <InputText id="Name" class="form-control" @bind-Value="newCategory.Name" />
        </div>

        <div class="mb-3 form-group">
            <label for="Url" class="form-label">URL</label>
            <InputText id="Url" class="form-control" @bind-Value="newCategory.Url" />
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Save Category</button>
        </div>
    </EditForm>
</div>