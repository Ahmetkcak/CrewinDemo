@page "/category/new"

<h3 class="text-center mt-4">New Category</h3>

<div class="container mt-4">
    <EditForm Model="@category" OnValidSubmit="HandleSubmit" FormName="categoryForm">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label for="Slug" class="form-label">Slug</label>
            <InputText id="Slug" class="form-control" @bind-Value="category.Slug" />
        </div>

        <div class="mb-3">
            <label for="Name" class="form-label">Name</label>
            <InputText id="Name" class="form-control" @bind-Value="category.Name"/>
        </div>

        <div class="mb-3">
            <label for="Url" class="form-label">URL</label>
            <InputText id="Url" class="form-control" @bind-Value="category.Url" />
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary">Save Category</button>
        </div>
    </EditForm>
</div>